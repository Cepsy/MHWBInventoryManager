<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/slot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/resourceImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/happyfelyne"
                android:contentDescription="@string/todo"/>

            <TextView
                android:id="@+id/resourceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nom_de_resource"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/resourceImage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/resourceName"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="23dp"
                android:layout_toRightOf="@id/resourceImage"
                android:text="Description de la ressource"
                android:textSize="16sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    
</RelativeLayout>